{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@loaders/*": ["loaders/*"],
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@events/*": ["events/*"],
      "@broker/*": ["broker/*"],
      "@mail/*": ["mail/*"],
      "@database/*": ["database/*"],
      "@docs/*": ["docs/*"],
      "@core/*": ["core/*"]
    }
  },
  "include": ["src"]
}
